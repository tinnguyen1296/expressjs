<h1>Products</h1>
<div class="container">
  <div class="row">
    <% for(let item of products) { %>
      <div class="col-4 d-flex flex-column align-items-center">
        <div class="img">
          <img src="<%= item.image %>" alt="">
        </div>
        <div class="title">
          <h3><%= item.name %></h3>
        </div>

        <div class="email">
          <p><%= item.email %></p>
        </div>
      </div>
    <% } %>
  </div>
  <div class="pagnigation d-flex justify-content-center">
    <div class="prev">
      Prev
    </div>
    <ul class="d-flex list-unstyled justify-content-center">
      <% for(let i = 0; i < showPag.length; i++) { %>
        <li class="<%= (active === showPag[i]) ? 'active' : '' %>">
          <a href="?page=<%= showPag[i] %>">
            <%= showPag[i] %>
          </a>
        </li>
      <% } %>
    </ul>
    <div class="next">
      Next
    </div>
  </div>
</div>
