<h1><%= title %></h1>

<form action="/users/<%= action %>" method="post">
  <div class="form-group">
    <label for="name">Name</label>
    <input type="name" class="form-control" id="name" value="<%= user.name %>" aria-describedby="emailHelp" placeholder="Enter name">
  </div>
  <div class="form-group">
    <label for="number">Phone Number</label>
    <input type="number" class="form-control" id="number" value="<%= user.number %>" placeholder="Password">
  </div>
  <input type="submit" class="btn btn-primary custom-form-user" value="<%= action %>">
</form>
<link rel="stylesheet" href="css/user.css">
<script src="/aa.js"></script>
<script type="text/javascript">
  const btn = document.querySelector('.custom-form-user');
  btn.value = btn.value.charAt(0).toUpperCase() + btn.value.substring(1)
</script>
